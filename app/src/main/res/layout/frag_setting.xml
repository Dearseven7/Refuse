<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_refuse"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/persontool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D6ECD6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="428dp"
            android:layout_height="117dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我是名字"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/person_photo"
            android:layout_width="166dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@drawable/image_circle"
            android:scaleType="fitCenter"
            android:src="@drawable/pic111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/text_notification"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/up_me"
            android:paddingTop="15dp"
            android:text="我的消息"
            android:textAlignment="center"
            android:textColor="#30AF74"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_person_homepage"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/middle_me"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="个人主页"
            android:textAlignment="center"
            android:textColor="#30AE74"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_question_record"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/middle_me"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="答题记录"
            android:textAlignment="center"
            android:textColor="#39AF7A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/down_me"
            android:paddingTop="12dp"
            android:text="意见反馈"
            android:textAlignment="center"
            android:textColor="#30AE74"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_agreement"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/down_me"
            android:paddingTop="12dp"
            android:text="协议与隐私"
            android:textAlignment="center"
            android:textColor="#30AE74"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/up_me"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="关于我们"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#39AE7A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_version"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/down_me"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="当前版本"
            android:textAlignment="center"
            android:textColor="#35A674"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/text_logout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logout"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="退出登录"
            android:textAlignment="center"
            android:textColor="#91BCA8"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</LinearLayout>